<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ðŸ”¼ ÐÐ°Ð²Ñ–Ð³Ð°Ñ†Ñ–Ð¹Ð½Ñ– ÐºÐ½Ð¾Ð¿ÐºÐ¸ -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF5722"
                android:text="@string/button_back"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingEnd="8dp"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/projectButtonContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


        <!-- ðŸ”½ ÐšÐ¾Ð½Ñ‚ÐµÐ¹Ð½ÐµÑ€ Ð´Ð»Ñ Ð²Ð¼Ñ–ÑÑ‚Ñƒ Ð¿Ñ€Ð¾ÐµÐºÑ‚Ñƒ -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/projectFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/createProjectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_back"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/deleteProjectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete_back"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginStart="0dp"/>
        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>